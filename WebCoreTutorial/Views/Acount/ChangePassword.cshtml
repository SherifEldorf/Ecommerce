
@{
    ViewData["Title"] = "ChangePassword";
}

<div class="container">
    <div class="page-title">
        <h4>تغيير كلمة المرور</h4>
    </div>
    <div class="text-danger">@ViewBag.msg</div>
    @if (TempData["success"] != null)
    {
        <div><p class="alert alert-success">@TempData["Success"]</p></div>
    }
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ChangePassword">
                <div class="form-group">
                    <label class="control-label">كلمة المرور</label>
                    <input type="password" class="form-control" placeholder="Password" name="pass" required />
                </div>
                <div class="form-group">
                    <label class="control-label">اعادة كتابة كلمة المرور</label>
                    <input type="password" class="form-control" placeholder="Password" name="passConfirm" required />
                </div>
                <div class="form-group">
                    <input type="submit" value="تغيير كلمة المرور" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>