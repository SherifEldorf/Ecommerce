@model WebCoreTutorial.Models.SubCategory

@{
    ViewData["Title"] = "تفاصيل تصنيف فرعي";
}

<div class="container">
    <div class="page-title">
        <h4>تفاصيل تصنيف فرعي</h4>
    </div>

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SubCatName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SubCatName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.catName)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.id">تعديل</a>
    </div>
    <div>
        <a asp-action="Index">العودة لقائمة التصنيفات الفرعية</a>
    </div>
</div>
